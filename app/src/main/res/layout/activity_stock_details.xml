<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <androidx.core.widget.NestedScrollView android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.StockDetailsActivity">

      <View
          android:id="@+id/viewTop"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:background="@color/green"
          app:layout_constraintVertical_weight="1.5"
          app:layout_constraintBottom_toTopOf="@+id/viewBottom"/>

      <ImageView
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:src="@drawable/ic_back_white"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          android:layout_marginTop="10dp"
          android:layout_marginStart="10dp"
          android:padding="10dp"
          android:id="@+id/imgBack"/>

      <ImageView
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:src="@drawable/ic_add_white"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginTop="10dp"
          android:layout_marginEnd="10dp"
          android:padding="10dp"
          android:id="@+id/imgAddToWatchlist"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/white"
          app:layout_constraintTop_toBottomOf="@+id/imgBack"
          android:layout_marginTop="10dp"
          android:layout_marginStart="10dp"
          app:layout_constraintStart_toStartOf="parent"
          android:id="@+id/tvCompanyName"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/white"
          app:layout_constraintTop_toBottomOf="@+id/tvCompanyName"
          android:layout_marginTop="10dp"
          android:layout_marginStart="10dp"
          android:textSize="16sp"
          android:textStyle="bold"
          app:layout_constraintStart_toStartOf="parent"
          android:id="@+id/tvSymbol"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/white"
          app:layout_constraintTop_toBottomOf="@+id/tvSymbol"
          android:layout_marginTop="10dp"
          android:layout_marginStart="10dp"
          android:textSize="20sp"
          app:layout_constraintStart_toStartOf="parent"
          android:id="@+id/tvPrice"/>

      <androidx.cardview.widget.CardView
          android:id="@+id/cardChart"
          android:layout_width="match_parent"
          android:layout_height="?actionBarSize"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/viewTop"
          app:layout_constraintBottom_toTopOf="@id/viewBottom"
          android:layout_marginStart="20dp"
          android:layout_marginTop="15dp"
          android:layout_marginEnd="20dp"
          app:cardElevation="5dp"
          android:translationZ="10dp"
          app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="View detailed chart"
              android:textColor="@color/black"
              android:layout_centerInParent="true"
              android:textSize="20sp"/>

        </RelativeLayout>

      </androidx.cardview.widget.CardView>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Stats"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:textSize="16sp"
          app:layout_constraintTop_toBottomOf="@+id/cardChart"
          app:layout_constraintStart_toStartOf="@id/cardChart"
          android:layout_marginTop="10dp"
          android:translationZ="10dp"
          android:id="@+id/tvStatsTitle"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          app:layout_constraintTop_toBottomOf="@id/tvStatsTitle"
          app:layout_constraintStart_toStartOf="@+id/cardChart"
          app:layout_constraintEnd_toEndOf="@+id/cardChart"
          android:weightSum="2"
          android:translationZ="10dp"
          android:id="@+id/linStats">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp">

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OPEN"
                android:textColor="@color/primary_grey"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_grey"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:id="@+id/tvOpen"/>

          </RelativeLayout>

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HIGH"
                android:textColor="@color/primary_grey"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_grey"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:id="@+id/tvHigh"/>

          </RelativeLayout>

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="52 WK HIGH"
                android:textColor="@color/primary_grey"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_grey"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:id="@+id/tv52WKHigh"/>

          </RelativeLayout>

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MKT CAP"
                android:textColor="@color/primary_grey"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_grey"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:id="@+id/tvMKTCap"/>

          </RelativeLayout>

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cap Type"
                android:textColor="@color/primary_grey"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_grey"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:id="@+id/tvCapType"/>

          </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp">

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PREV CLOSE"
                android:textColor="@color/primary_grey"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_grey"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:id="@+id/tvPrevClose"/>

          </RelativeLayout>

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOW"
                android:textColor="@color/primary_grey"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_grey"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:id="@+id/tvLow"/>

          </RelativeLayout>

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="52 WK LOW"
                android:textColor="@color/primary_grey"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_grey"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:id="@+id/tv52WKLow"/>

          </RelativeLayout>

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VOL"
                android:textColor="@color/primary_grey"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_grey"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:id="@+id/tvVol"/>

          </RelativeLayout>

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P/E"
                android:textColor="@color/primary_grey"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_grey"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:id="@+id/tvPE"/>

          </RelativeLayout>

        </LinearLayout>

      </LinearLayout>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@id/linStats"
          app:layout_constraintStart_toStartOf="@id/tvStatsTitle"
          android:text="Market Sentiment"
          android:textSize="16sp"
          android:textStyle="bold"
          android:translationZ="10dp"
          android:textColor="@color/black"
          android:layout_marginTop="20dp"
          android:id="@+id/tvMarketSentimentTitle"/>

    <app.futured.donut.DonutProgressView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/donutView"
        app:layout_constraintTop_toBottomOf="@+id/tvMarketSentimentTitle"
        app:layout_constraintStart_toStartOf="@+id/tvMarketSentimentTitle"
        android:layout_marginStart="20dp"
        app:donut_gapWidth="50"
        app:donut_gapAngle="90"
        app:donut_bgLineColor="@color/light_grey"
        app:donut_strokeWidth="20dp"
        android:translationZ="10dp"
        android:layout_marginTop="10dp"/>

      <RelativeLayout
          android:layout_width="130dp"
          android:layout_height="130dp"
          app:layout_constraintTop_toTopOf="@id/donutView"
          app:layout_constraintBottom_toBottomOf="@id/donutView"
          app:layout_constraintStart_toStartOf="@id/donutView"
          app:layout_constraintEnd_toEndOf="@id/donutView"
          android:translationZ="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:textSize="22sp"
            android:layout_centerInParent="true"
            />

      </RelativeLayout>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toTopOf="@+id/donutView"
          app:layout_constraintBottom_toBottomOf="@id/donutView"
          app:layout_constraintStart_toEndOf="@id/donutView"
          app:layout_constraintEnd_toEndOf="parent"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:translationZ="10dp"/>


      <View
          android:id="@+id/viewBottom"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:background="#efefef"
          app:layout_constraintVertical_weight="3"
          app:layout_constraintTop_toBottomOf="@+id/viewTop"
          app:layout_constraintBottom_toBottomOf="parent"
          />

    </androidx.constraintlayout.widget.ConstraintLayout>

  </androidx.core.widget.NestedScrollView>

  <com.google.android.material.button.MaterialButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      app:backgroundTint="@color/green"
      android:layout_marginTop="10dp"
      android:layout_marginEnd="10dp"
      app:cornerRadius="25dp"
      app:elevation="10dp"
      android:text="BUY"
      app:icon="@drawable/ic_add"
      android:textSize="16sp"
      android:paddingStart="20dp"
      android:paddingEnd="20dp"
      android:paddingTop="10dp"
      android:paddingBottom="10dp"
      android:id="@+id/btnBuy"
      android:layout_above="@+id/btnSell"/>

  <com.google.android.material.button.MaterialButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentEnd="true"
      app:backgroundTint="@color/primary_red"
      android:layout_margin="10dp"
      app:cornerRadius="25dp"
      app:elevation="10dp"
      android:text="SELL"
      app:icon="@drawable/ic_remove"
      android:textSize="16sp"
      android:paddingStart="20dp"
      android:paddingEnd="20dp"
      android:paddingTop="10dp"
      android:paddingBottom="10dp"
      android:id="@+id/btnSell"/>


</RelativeLayout>