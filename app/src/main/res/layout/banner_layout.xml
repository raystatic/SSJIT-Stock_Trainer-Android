<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="150dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/logo_green"
        android:padding="20dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_zerodha"
            android:id="@+id/imgStock"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FYERS ONE"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/imgStock"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_alignTop="@+id/imgStock"
            android:id="@+id/tvStock"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trade Faster &amp; Smarter"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/imgStock"
            android:textSize="14sp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/tvStock"
            android:id="@+id/tvTagline"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTagline"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/primaryblue"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open Account"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</androidx.cardview.widget.CardView>