<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/topBarRel"
        android:background="@color/primaryblue"
        android:translationZ="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Watchlist"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:weightSum="2"
        android:id="@+id/linIndices"
        app:layout_constraintTop_toBottomOf="@+id/topBarRel">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SENSEX ₹49624.76"
                android:textColor="@color/primary_grey"
                android:layout_gravity="end"
                android:id="@+id/tvIndexSensex"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-167.36(0.34%)"
                android:textColor="@color/primary_grey"
                android:layout_alignEnd="@+id/tvIndexSensex"
                android:layout_below="@+id/tvIndexSensex"
                android:id="@+id/tvIndexSensexChange"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SENSEX ₹49624.76"
                android:textColor="@color/primary_grey"
                android:layout_gravity="end"
                android:id="@+id/tvIndexNifty"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-167.36(0.34%)"
                android:textColor="@color/primary_grey"
                android:layout_alignEnd="@+id/tvIndexNifty"
                android:layout_below="@+id/tvIndexNifty"
                android:id="@+id/tvIndexNiftyChange"/>

        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find some stocks and to watchlist first"
        android:textColor="@color/primary_grey"
        app:layout_constraintBottom_toTopOf="@+id/btnFindStocks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        android:id="@+id/tvFindText"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Stock"
        android:id="@+id/btnFindStocks"
        app:layout_constraintTop_toBottomOf="@+id/linIndices"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvWatchlist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linIndices"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        card_view:listitem="@layout/watchlist_item"/>

</androidx.constraintlayout.widget.ConstraintLayout>